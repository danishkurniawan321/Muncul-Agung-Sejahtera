<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[@class='cashier']" position="after">
            <div t-if="receipt.client and receipt.client.name">Customer :  <t t-esc="receipt.client.name" /> </div>
            <div t-if="receipt.client and receipt.client.email">Email :  <t t-esc="receipt.client.email" /> </div>
            <div t-if="receipt.client and receipt.client.street">Addess :  <t t-esc="receipt.client.street" /> </div>
        </xpath>
    </t>

</templates>
